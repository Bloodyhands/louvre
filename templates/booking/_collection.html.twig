{% block _booking_tickets_widget %}

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0" xmlns="http://www.w3.org/1999/html">

    <div class="form-group">
        <button type="button" id="add-ticket" class="btn btn-primary">Ajouter un ticket</button>
    </div>
{% endblock %}

{% block _booking_tickets_entry_row %}
    {{ form_widget(form) }}
{% endblock %}
{% block _booking_tickets_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-11">
                <div class="card border-secondary">
                    <div class="card-body">
                        <div class="row">
                            <p class="card-text">
                            <div class="col-4">
                                {{ form_row(form.name) }} {# represente ici une entry #}
                            </div>
                            </p>
                            <p class="card-text">
                            <div class="col-4">
                                {{ form_row(form.firstname) }}
                            </div>
                            </p>
                            <p class="card-text">
                            <div class="col-4">
                                {{ form_row(form.country) }}
                            </div>
                            </p>
                            <p class="card-text">
                            <div class="col-4 mt-2">
                                {{ form_row(form.birthday_date) }}
                            </div>
                            </p>
                            <p class="card-text">
                            <div class="col-8 mt-3">
                                {{ form_row(form.type) }}
                            </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-1">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</button>
            </div>
        </div>

    </div>
{% endblock %}