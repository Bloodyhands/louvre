{% extends 'base.html.twig' %}

{% block title %}Création d'une commande{% endblock %}

{% form_theme form 'booking/_collection.html.twig' %} {#_self représente le fichier actuel#}

{% block body %}

	<div class="container">
		{{ form_start(form) }}
		<div class="col-lg-12 text-center">
			<h2>Réservations des billets</h2>
		</div>
		<div class="row alert alert-secondary">
			<div class="col-lg-4">
				{{ form_row(form.reservationDate, {'attr': {'class': 'datepickerBooking'}}) }}
			</div>
			<div class="col-lg-4">
				{{ form_row(form.email) }}
			</div>
			<div class="col-lg-4">
				{{ form_row(form.dayType) }}
			</div>
			<div class="col-lg-12">
				{{ form_row(form.tickets) }}
			</div>
			<div class="col-lg-4 offset-4 text-center">
				<button type="submit" class="btn btn-primary">Commander</button>
			</div>
		</div>
		{{ form_end(form) }}
	</div>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/booking.js') }}"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/locales/bootstrap-datepicker.fr.min.js"></script>

	<script>
		$.fn.datepicker.dates['fr'] = {
			days: ["Lundi", "Mardi", "Mercredi", "Jeudi", "Vendredi", "Samedi", "Dimanche"],
			daysShort: ["Lun", "Mar", "Mer", "Jeu", "Ven", "Sam", "Dim"],
			daysMin: ["Lu", "Ma", "Me", "Je", "Ve", "Sa", "Di"],
			months: ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"],
			monthsShort: ["Jan", "Fev", "Mar", "Avr", "Mai", "Jui", "Jui", "Aoû", "Sep", "Oct", "Nov", "Dec"],
			today: "today",
			clear: "Clear",
			format: "dd/mm/yyyy",
			titleFormat: "MM yyyy", /* Leverages same syntax as 'format' */
			weekStart: 0
		};

		$(document).ready(function(){
			$('body').on('focus',".datepickerBooking" , function(){
				$(this).datepicker({
					language: 'fr',
					format:'dd/mm/yyyy',
					startDate: new Date(),
					datesDisabled: [
							'22/04/2019', '01/05/2019', '08/05/2019', '30/05/2019', '10/06/2019', '14/07/2019', '15/08/2019', '15/08/2019', '01/11/2019', '11/11/2019', '25/12/2019', '31/12/2019'
					],
					daysOfWeekDisabled : [
							'06'
					]
				});
			});
		});

		$(document).ready(function(){
			$('body').on('focus',".datepickerTicket" , function(){
				$(this).datepicker({
					language: 'fr',
					format:'dd/mm/yyyy',
					endDate: new Date()
				});
			});
		});

	</script>
{% endblock %}