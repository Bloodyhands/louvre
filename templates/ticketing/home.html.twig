{% extends 'base.html.twig' %}

{% block title %}
    <h1>{{ title }}</h1>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-center font-italic font-weight-bold">Bienvenue sur le site de réservation en ligne du Louvre</h2>
        </div>
    </div>

    <div class="row justify-content-sm-center">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width: 600px;">
            <ol class="carousel-indicators">
                <li data-target="carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('japonisme.jpg') }}" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h4>Japonismes 2018</h4>
                        <p>Kohei Nawa, Throne</p>
                        <p>Du 13 juillet à mi-janvier 2019</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('pastel.jpg') }}" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h4>Pastel du Louvre du 17e et 18e siècle</h4>
                        <p>Du 7 juin au 10 septembre 2018</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


{% endblock %}

