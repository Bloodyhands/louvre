    {{ form_start(form) }}

    <h3>Tickets</h3>
    <ul class="tickets" data-prototype="{{ form_widget(form.tickets.vars.prototype)|e('html_attr') }}">
        {% for ticket in form.tickets %}
        <li>{{ form_row(ticket.name) }}</li>
        <li>{{ form_row(ticket.firstname) }}</li>
        <li>{{ form_row(ticket.country) }}</li>
        <li>{{ form_row(ticket.birthday_date) }}</li>
        <li>{{ form_row(ticket.type) }}</li>
        {% endfor %}
    </ul>

    {{ form_end(form) }}

{% endblock %}

